<% include layouts/header.ejs %>
    <div class="content">
        <div class="login-box">
            <form action="" method="POST">
                <div>
                    <i class="fas fa-user"></i>
                    <label for="user">Usuario</label>
                </div>
                <input type="text" id="user">
                <div>
                    <i class="fas fa-key"></i>
                    <label for="pass">Contrase√±a</label>
                </div>
                <input type="password" id="pass">
                <button type="submit">Ingresar</button>
            </form>
        </div>
    </div>
    <style>
        .content{
            padding: 130px;
            background-image: url(https://images.pexels.com/photos/6517/parking-multi-storey-car-park.jpg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);
            background-size: cover;
            background-position: center;
        }
        .login-box{
            width: 500px;
            margin-left: auto;
            margin-right: auto;
            background-color: black;
            padding: 40px 70px;
            border-radius: 20px;
        }
        .login-box > form > * {
            display: block;
            margin: 15px auto;
            width: 100%;
        }
        .login-box > form > div{
            text-align: left;
        }
        .login-box > form > div > label , .login-box > form > div > i{
            color: white;
            font-size: 20px;
            margin-right: 7px;
        }
        .login-box > form > button {
            margin-top: 30px;
            background-color: white;
            border: 1px solid white;
            border-radius: 5px;
            cursor: pointer;
            padding: 7px;
            font-weight: bold;
        }
        .login-box > form > input {
            background-color: transparent;
            border: 0;
            padding: 5px;
            border-bottom: 2px solid white;
            color: white;
        }
        .login-box > form > input:focus{
            outline: none;
        }
    </style>
